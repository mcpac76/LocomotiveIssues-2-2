@model LocomotiveIssues.Models.Issue.AddIssueModel

<div class="jumbotron">
    <div class="page-header text-center">
        <h5>Dodawanie zgłoszenia</h5>
    </div>

    @using (Html.BeginForm())
    {
        <div class="form-group row">
            @Html.LabelFor(f => f.VehicleType, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(f => f.VehicleType, new { @class = "col-sm-10 form-control" })
            @*Html.ValidateFor(f => f.VehicleType);*@
        </div>
        <div class="form-group row">
            @Html.LabelFor(f => f.VehicleNumber, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(f => f.VehicleNumber, new { @class = "col-sm-10 form-control" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(f => f.VehicleSideNumber, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(f => f.VehicleSideNumber, new { @class = "col-sm-10 form-control" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(f => f.CompanyName, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(f => f.CompanyName, new { @class = "col-sm-10 form-control" })
            @*Html.ValidateFor(f => f.CompanyName);*@
        </div>
        <div class="form-group row">
            @Html.LabelFor(f => f.DateOfRegistration, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(f => f.DateOfRegistration, new { @class = "col-sm-10 form-control" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(f => f.DateOfIssue, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(f => f.DateOfIssue, new { @class = "col-sm-10 form-control" })
            @*Html.ValidateFor(f => f.DateOfIssue);*@
        </div>
        <div class="form-group row">
            @Html.LabelFor(f => f.DateOfEnd, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(f => f.DateOfEnd, new { @class = "col-sm-10 form-control" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(f => f.IssueCategoryName, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(f => f.IssueCategoryName, new { @class = "col-sm-10 form-control" })
            @*Html.ValidateFor(f => f.IssueCategoryName);*@
        </div>
        <div class="form-group row">
            @Html.LabelFor(f => f.IssueDescription, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(f => f.IssueDescription, new { @class = "col-sm-10 form-control" })
            @*Html.ValidateFor(f => f.IssueDescription);*@
        </div>
        <div class="form-group row">
            @Html.LabelFor(f => f.IsGuarantee, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(f => f.IsGuarantee, new { @class = "col-sm-10 form-control" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(f => f.IsActive, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(f => f.IsActive, new { @class = "col-sm-10 form-control" })
        </div>

        @Html.ValidationSummary("", new { @class = "text-danger" });

        <div class="text-center">
            <input type="submit" class="btn btn-info" value="Zapisz" />
            @Html.ActionLink("Powrót", "List", "Issue", null, new { @class = "btn btn-success" })
        </div>
    }
</div>