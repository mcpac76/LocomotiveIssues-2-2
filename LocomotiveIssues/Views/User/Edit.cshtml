@model LocomotiveIssues.Models.User.EditUserModel

<div class="jumbotron">
    <div class="page-header text-center">
        <h5>Edytowanie użytkownika</h5>
    </div>

    @using (Html.BeginForm())
    {
        <div class="form-group row">
            @Html.LabelFor(u => u.CompanyName, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(u => u.CompanyName, new { @class = "col-sm-10 form-control" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(u => u.StreetName, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(u => u.StreetName, new { @class = "col-sm-10 form-control" })
        </div>

        <div class="form-group row">
            @Html.LabelFor(u => u.CityName, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(u => u.CityName, new { @class = "col-sm-10 form-control" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(u => u.PostalCode, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(u => u.PostalCode, new { @class = "col-sm-10 form-control" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(u => u.PhoneNumber, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(u => u.PhoneNumber, new { @class = "col-sm-10 form-control" })
        </div>

        <div class="text-center">
            <input type="submit" class="btn btn-info" value="Zapisz" />
            @Html.ActionLink("Powrót", "List", "User", null, new { @class = "btn btn-success" })
        </div>
        }
    </div>