@model LocomotiveIssues.Models.Locomotive.AddLocomotiveModel

<div class="jumbotron">
    <div class="page-header text-center">
        <h5>Dodawanie lokomotywy</h5>
    </div>

    @using (Html.BeginForm())
    {
    <div class="form-group row">
        @Html.LabelFor(l => l.VehicleType, new { @class = "col-sm-2 col-form-label" })
        @Html.EditorFor(l => l.VehicleType, new { @class = "col-sm-10 form-control" })
        @*Html.ValidateFor(l => l.VehicleType);*@
    </div>
    <div class="form-group row">
        @Html.LabelFor(l => l.VehicleNumber, new { @class = "col-sm-2 col-form-label" })
        @Html.EditorFor(l => l.VehicleNumber, new { @class = "col-sm-10 form-control" })
        @*Html.ValidateFor(l => l.VehicleNumber);*@
    </div>
    <div class="form-group row">
        @Html.LabelFor(l => l.VehicleSideNumber, new { @class = "col-sm-2 col-form-label" })
