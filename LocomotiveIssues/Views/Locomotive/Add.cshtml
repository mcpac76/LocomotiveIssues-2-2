        @*Html.ValidateFor(l => l.VehicleSideNumber);*@
    </div>

            @Html.ValidationSummary("", new { @class = "text-danger" });
          
    <div class="text-center">
        <input type="submit" class="btn btn-info" value="Zapisz" />
        @Html.ActionLink("Powrót", "List", "Locomotive", null, new { @class = "btn btn-success" })
    </div>
            }
    </div>
