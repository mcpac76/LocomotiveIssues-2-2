@model LocomotiveIssues.Models.Locomotive.EditLocomotiveModel

<div class="jumbotron">
    <div class="page-header text-center">
        <h5>Edytowanie lokomotywy</h5>
    </div>

    @using (Html.BeginForm())
    {
        <div class="form-group row">
            @Html.LabelFor(l => l.VehicleType, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(l => l.VehicleType, new { @class = "col-sm-10 form-control" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(l => l.VehicleNumber, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(l => l.VehicleNumber, new { @class = "col-sm-10 form-control" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(l => l.VehicleSideNumber, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(l => l.VehicleSideNumber, new { @class = "col-sm-10 form-control" })
        </div>

        <div class="text-center">
            <input type="submit" class="btn btn-info" value="Zapisz" />
            @Html.ActionLink("Powrót", "List", "Locomotive", null, new { @class = "btn btn-success" })
        </div>
    }
</div>