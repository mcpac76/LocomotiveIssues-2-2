@model LocomotiveIssues.Models.IssueCategory.EditIssueCategoryModel

<div class="jumbotron">
<div class="page-header text-center">
    <h5>Edytowanie kategorii usterek</h5>
</div>

@using (Html.BeginForm())
{
    <div class="form-group row">
        @Html.LabelFor(i => i.IssueCategoryNumber, new { @class = "col-sm-2 col-form-label" })
        @Html.EditorFor(i => i.IssueCategoryNumber, new { @class = "col-sm-10 form-control" })
    </div>
    <div class="form-group row">
        @Html.LabelFor(i => i.IssueCategoryName, new { @class = "col-sm-2 col-form-label" })
        @Html.EditorFor(i => i.IssueCategoryName, new { @class = "col-sm-10 form-control" })
    </div>
    <div class="form-group row">
        @Html.LabelFor(i => i.IssueCategoryDescription, new { @class = "col-sm-2 col-form-label" })
        @Html.EditorFor(i => i.IssueCategoryDescription, new { @class = "col-sm-10 form-control" })
    </div>
    
    <div class="text-center">
        <input type="submit" class="btn btn-info" value="Zapisz" />
        @Html.ActionLink("Powrót", "List", "IssueCategory", null, new { @class = "btn btn-success" })
    </div>   
    }
</div>

